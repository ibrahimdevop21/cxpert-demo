---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Careers at CXperts',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->
  <HeroText
    title="Join Our Team"
    subtitle="Build your career with a company that values innovation, growth, and employee success"
  />

  <!-- Content Widget **************** -->
  <Content>
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Why CXperts?</h3>
      <p class="mb-4">At CXperts, we believe in creating a workplace that empowers our employees to grow, innovate, and succeed. Our employee-centric culture focuses on providing a comfortable and respectful environment where talent can thrive.</p>
      
      <h4 class="text-xl font-bold tracking-tight dark:text-white sm:text-2xl mb-2">What We Offer</h4>
      <ul class="list-disc list-inside mb-4 ml-4">
        <li>Competitive compensation packages</li>
        <li>Professional development opportunities</li>
        <li>Health and wellness benefits</li>
        <li>Work-life balance</li>
        <li>Modern office environment</li>
        <li>International exposure</li>
      </ul>
    </Fragment>
  </Content>

  <!-- Features2 Widget ************** -->
  <Features2
    title="Open Positions"
    subtitle="Join our growing team in these roles"
    items={[
      {
        title: 'Customer Service Representatives',
        description: 'Multilingual positions available for various markets',
        icon: 'tabler:users',
      },
      {
        title: 'Technical Support Specialists',
        description: 'Support our clients with technical expertise',
        icon: 'tabler:tool',
      },
      {
        title: 'HR Consultants',
        description: 'Help businesses optimize their workforce',
        icon: 'tabler:briefcase',
      },
      {
        title: 'Marketing Specialists',
        description: 'Drive our clients' marketing success',
        icon: 'tabler:chart-arrows',
      },
      {
        title: 'Data Analysts',
        description: 'Turn data into actionable insights',
        icon: 'tabler:chart-dots',
      },
      {
        title: 'Software Developers',
        description: 'Build innovative digital solutions',
        icon: 'tabler:code',
      },
    ]}
  />

  <!-- Content Widget **************** -->
  <Content
    isReversed
    items={[
      {
        title: 'Growth Opportunities',
        description:
          'Clear career paths and opportunities for advancement',
      },
      {
        title: 'Learning & Development',
        description:
          'Regular training programs and skill development workshops',
      },
      {
        title: 'Global Exposure',
        description:
          'Work with international clients and diverse teams',
      },
    ]}
    image={{ src: '~/assets/images/careers.jpg', alt: 'CXperts Workplace' }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Employee Development</h3>
      We invest in our people through comprehensive training and development programs.
    </Fragment>
  </Content>

  <!-- Features2 Widget ************** -->
  <Features2
    title="Application Process"
    subtitle="Your journey to joining CXperts"
    items={[
      {
        title: '1. Apply Online',
        description: 'Submit your application through our careers portal',
        icon: 'tabler:send',
      },
      {
        title: '2. Initial Screening',
        description: 'Our HR team reviews your application',
        icon: 'tabler:file-check',
      },
      {
        title: '3. Interviews',
        description: 'Meet with our team to discuss your potential role',
        icon: 'tabler:users',
      },
      {
        title: '4. Skills Assessment',
        description: 'Demonstrate your expertise in your field',
        icon: 'tabler:certificate',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->
  <CallToAction
    title="Ready to Start Your Journey?"
    subtitle="Apply now and be part of our success story"
    actions={[
      {
        variant: 'primary',
        text: 'Apply Now',
        href: '/contact?subject=Job Application',
      },
      {
        text: 'Learn More',
        href: '/about',
      },
    ]}
  />
</Layout>
